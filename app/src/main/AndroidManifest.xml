<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="moonc.example.com.studentteachercollaboration_v2">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminHome"
            android:label="@string/admin_panel">

        </activity>
        <activity
            android:name=".UserAdd"
            android:label="@string/add_user">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AdminHome" />
        </activity>
        <activity android:name=".UserUpdate" />
        <activity android:name=".RoutineAddOrUpdate">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AdminHome" />
        </activity>
        <activity
            android:name=".ShowRoutine"
            android:label="@string/view_routine" />
        <activity
            android:name=".SendMessage"
            android:label="@string/write_message">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ShowRoutine" />
        </activity>
        <activity
            android:name=".ViewMessages"
            android:label="@string/view_message">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AdminHome" />
        </activity>

        <service android:name=".Services.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".FirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>